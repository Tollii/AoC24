        <Compile Include="DayOne\InputProcessor.fs" />
        <Compile Include="DayOne\DistanceProcessor.fs" />
        <Compile Include="DayOne\SimilarityScoreProcessor.fs" />
        <Compile Include="DayOne\DayOne.fs" />
